<Window x:Class="MTS_PDF_Table.Log"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTS_PDF_Table"
        mc:Ignorable="d"
        Title="Log" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" x:Name="Copy" Content="Копировать" Click="Copy_Click"/>
        <ListBox x:Name="LogBox"  Grid.Row="0" Width="789" VerticalContentAlignment="Top"/>
    </Grid>
</Window>
